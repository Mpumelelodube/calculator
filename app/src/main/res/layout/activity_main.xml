<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <TableLayout
            android:layout_width="360dp"
            android:layout_height="354dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.774" android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="90dp">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/one"
                    android:background="@color/colorPrimary" android:textSize="36sp"
                    android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/two"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/three"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/multiply"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
        </TableRow>
        <TableRow android:layout_width="331dp" android:layout_height="114dp">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/four"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/five"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/six"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/plus"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/seven"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/eight"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/nine"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/subtract"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/zero"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/comma"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="84dp" android:id="@+id/devide"
                    android:background="@color/colorPrimary" android:textColor="#ADFFFFFF"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" android:id="@+id/equals"
                    android:background="@color/colorPrimary" android:textSize="36sp" android:textColor="#ADFFFFFF"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="0"
            android:layout_width="334dp"
            android:layout_height="65dp"
            android:id="@+id/textView" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintVertical_bias="0.547" android:textColor="#94FFFFFF"/>
    <TextView
            android:layout_width="184dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.771"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            android:textColor="#9FFFFEFE" android:textSize="24sp" android:singleLine="true"
            android:cursorVisible="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>